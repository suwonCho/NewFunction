<UserControl x:Class="function.wpf.wucSandtimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:function.wpf"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" Loaded="UserControl_Loaded" SizeChanged="UserControl_SizeChanged">
    <Grid Name="grd" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="100" >
        <Grid.RenderTransform>
            <RotateTransform x:Name="rTrans" CenterX="0.5" CenterY="0.5"/>
        </Grid.RenderTransform>

        <Ellipse  Name="el" Fill="White" Stroke="Black" StrokeThickness="1" />
        <Polyline Name="ln1" Stroke="Blue" StrokeThickness="2" Points="50 20, 75 20, 60 50, 65 60,35 60,40 50, 25 20, 50 20" Fill="LightGray" />
        <Polyline Name="ln2" Stroke="Blue" StrokeThickness="2" Points="50 60,65 60,75 80,25 80,35 60, 50 60" Fill="Blue" />
    </Grid>
</UserControl>
