<UserControl x:Class="function.wpf.ComboBoxXTextItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:function.wpf"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="20" Loaded="UserControl_Loaded"  >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="txt" TextWrapping="WrapWithOverflow" HorizontalAlignment="Left" VerticalAlignment="Center"  />
        <local:ImageButton x:Name="btn" Grid.Column="1" ResIcon16Name="delete" Image_Width="18" Text="" BorderThickness="0" Background="Transparent" Click="btn_Click" />
    </Grid>
</UserControl>
