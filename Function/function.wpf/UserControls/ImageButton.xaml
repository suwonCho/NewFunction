<Button x:Class="function.wpf.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:function.wpf"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="100">            
        <ContentControl>
            <StackPanel Name="sp" Orientation="Horizontal" Width="Auto" HorizontalAlignment="Left" >
                <Image x:Name="im"  Margin="0,0,5,0" />
                <TextBlock x:Name="txt" Text="Image Button" VerticalAlignment="Center"  />
            </StackPanel>
        </ContentControl>        
</Button>
